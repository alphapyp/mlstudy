    <dependency> <!-- Spark dependency -->
      <groupId>org.apache.spark</groupId>
      <artifactId>spark-mllib_2.10</artifactId>
      <version>1.3.1</version>

    </dependency>
    <!--<dependency> &lt;!&ndash; Cassandra &ndash;&gt;
